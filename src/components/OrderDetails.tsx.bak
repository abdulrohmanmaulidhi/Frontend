export default function OrderDetails({ roomCount, roomCharges, otherFees, onPaymentClick }: OrderDetailsProps) {
  const [privacyAgreed, setPrivacyAgreed] = useState(false);
  
  const subtotal = roomCharges.reduce((sum, charge) => sum + (charge.price * charge.quantity), 0);
  const otherFeesTotal = otherFees.reduce((sum, fee) => sum + (fee.price * fee.quantity), 0);
  const grandTotal = subtotal + otherFeesTotal;
  
  return (
    <div className="bg-white content-stretch flex flex-col gap-[25px] items-center relative rounded-[20px] size-full" data-name="Detail Pesanan Component">
      <div aria-hidden="true" className="absolute border-2 border-[#ffb4c4] border-solid inset-0 pointer-events-none rounded-[20px]" />
      
      <Header />
      
      <div className="h-auto relative shrink-0 w-full">
        <div className="flex flex-col items-center size-full">
          <div className="content-stretch flex flex-col gap-[46px] items-center px-[67px] py-[20px] relative w-full">
            <div className="content-stretch flex flex-col gap-[15px] items-start relative shrink-0 w-full">
              <SectionHeader />
              <RoomCountRow count={roomCount} />
              <TableHeader />
              
              {roomCharges.map((charge, index) => (
                <ChargeRow 
                  key={index}
                  type={charge.type}
                  price={charge.price}
                  quantity={charge.quantity}
                />
              ))}
              
              <SubtotalRow amount={subtotal} />
              
              <OtherFeesHeader />
              <TableHeader />
              
              {otherFees.map((fee, index) => (
                <ChargeRow 
                  key={index}
                  type={fee.name}
                  price={fee.price}
                  quantity={fee.quantity}
                />
              ))}
              
              <TotalRow amount={grandTotal} />
              
              <DisclaimerText text="*Harga total yang tertera adalah estimasi." />
              <DisclaimerText text="Sisa biaya paling lambat dibayarkan 2 minggu sebelum tanggal keberangkatan." />
              
              <PrivacyCheckbox checked={privacyAgreed} onChange={setPrivacyAgreed} />
            </div>
            
            <Button
              variant="pink-light"
              showArrows={false}
              disabled={!privacyAgreed}
              onClick={onPaymentClick}
              className="!bg-[#ffb4c4] hover:!bg-[#ff9eb4] !h-[80px] !w-[302px] !rounded-[20px] !p-[10px] !gap-[10px] !min-w-0"
            >
              <span className="font-['Inter:Semi_Bold',sans-serif] font-semibold text-[24px]">
                Lanjutkan pembayaran
              </span>
            </Button>
          </div>
        </div>
      </div>
    </div>
  );
}